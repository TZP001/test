<?xml version="1.0" encoding="UTF-8" ?>
<!-- XML File hand made and validate under Visual Dev -->
<!-- Rem1 : pour validation rajouter xmlns="urn:com:dassault_systemes:settings" car necessaire pour la validation seuleument -->
<!-- Rem2 : La validation n'accepte pas la definition du st:min sans la prÃ©sence du st:max -->
<!-- Rem3 : la definition du min et du max doit etre faite avant le default -->
<!-- Rem4 : 2 Tabpage dans un fichier XML : c'est possible mais Comment ? -->
<st:repository xsi:schemaLocation="urn:com:dassault_systemes:settings settings.xsd" xmlns:st="urn:com:dassault_systemes:settings" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <st:Description name="CATDesSettingDisplay" PrimaryTabpage="/Shape/Imagine And Shape/Display">
      <st:role>Settings to manage Imagine And Shape Display Options</st:role>
      <st:RepositoryFile>CATDesSetting</st:RepositoryFile>
      <st:version>1</st:version>
      <st:compatibility>
        <st:FullCompatibilityfromLevel>1 </st:FullCompatibilityfromLevel>
        <st:UpwardCompatibilityfromLevel>1</st:UpwardCompatibilityfromLevel>
      </st:compatibility>
    </st:Description>
    <st:attributes>
      <st:attribute Name="CurveColor">
        <st:role>color of the Imagine and Shape Curve</st:role>
        <st:uint size="3">
          <st:min>0</st:min>
          <st:max>255</st:max>
          <st:default size="3">
            <st:value>255</st:value>
            <st:value>255</st:value>
            <st:value>255</st:value>
          </st:default>
        </st:uint>
      </st:attribute>
      <st:attribute Name="CurveType">
        <st:role>Type of the Imagine and Shape Curve</st:role>
        <st:int>
          <!-- <st:min>1</st:min> -->
          <st:default>
            <st:value>1</st:value>
          </st:default>
        </st:int>
      </st:attribute>
      <st:attribute Name="CurveThickness">
        <st:role>Thickness of the Imagine and Shape Curve</st:role>
        <st:int>
          <!-- <st:min>1</st:min> -->
          <st:default>
            <st:value>2</st:value>
          </st:default>
        </st:int>
      </st:attribute>
      <st:attribute Name="SurfaceColor">
        <st:role>color of the Imagine and Shape Subdivision Surface</st:role>
        <st:uint size="3">
          <st:min>0</st:min>
          <st:max>255</st:max>
          <st:default size="3">
            <st:value>180</st:value>
            <st:value>180</st:value>
            <st:value>255</st:value>
          </st:default>
        </st:uint>
      </st:attribute>
        <st:attribute Name="BMColor">
        <st:role>color of the Imagine and Shape Base Mesh</st:role>
        <st:uint size="3">
          <st:min>0</st:min>
          <st:max>255</st:max>
          <st:default size="3">
            <st:value>255</st:value>
            <st:value>255</st:value>
            <st:value>255</st:value>
          </st:default>
        </st:uint>
      </st:attribute>
      <st:attribute Name="BMLineType">
        <st:role>Type of the Imagine and Shape Base Mesh</st:role>
        <st:int>
          <!-- <st:min>1</st:min> -->
          <st:default>
            <st:value>1</st:value>
          </st:default>
        </st:int>
      </st:attribute>
      <st:attribute Name="BMLineThickness">
        <st:role>Thickness of the Imagine and Shape Base Mesh</st:role>
        <st:int>
          <!-- <st:min>1</st:min> -->
          <st:default>
            <st:value>1</st:value>
          </st:default>
        </st:int>
      </st:attribute>
      <st:attribute Name="BMLineWeightType">
        <st:role>Type of the Imagine and Shape weighted Line of the Base Mesh</st:role>
        <st:int>
          <!-- <st:min>1</st:min> -->
          <st:default>
            <st:value>1</st:value>
          </st:default>
        </st:int>
      </st:attribute>
      <st:attribute Name="BMLineWeightThickness">
        <st:role>Thickness of the Imagine and Shape weighted Line of the Base Mesh</st:role>
        <st:int>
          <!-- <st:min>1</st:min> -->
          <st:default>
            <st:value>3</st:value>
          </st:default>
        </st:int>
      </st:attribute>
      <st:attribute Name="IsBMLineHiddenOn">
          <st:role>Hidden lines are displayed as dashed</st:role>
          <st:int>
              <st:min>0</st:min>
              <st:max>1</st:max>
              <st:default>
                  <st:value>1</st:value>
              </st:default>
          </st:int>
      </st:attribute>
      <st:attribute Name="BMPointSymbol">
        <st:role>Type of the Imagine and Shape Base Mesh vertices</st:role>
        <st:int>
          <!-- <st:min>1</st:min> -->
          <st:default>
            <st:value>5</st:value>
          </st:default>
        </st:int>
      </st:attribute>
      <st:attribute Name="BMPointWeightSymbol">
        <st:role>Type of the Imagine and Shape Base Mesh weighted vertices</st:role>
        <st:int>
          <!-- <st:min>1</st:min> -->
          <st:default>
            <st:value>4</st:value>
          </st:default>
        </st:int>
      </st:attribute>
        <st:attribute Name="IsBMMultiColorOn">
            <st:role>allow to define a specific color for each Base Mesh</st:role>
            <st:int>
                <st:min>0</st:min>
                <st:max>1</st:max>
                <st:default>
                    <st:value>1</st:value>
                </st:default>
            </st:int>
        </st:attribute>
        <st:attribute Name="IsBMSpecificSelColorOn">
          <st:role>allow to define a specific color for Selected Elements</st:role>
          <st:int>
              <st:min>0</st:min>
              <st:max>1</st:max>
              <st:default>
                  <st:value>0</st:value>
              </st:default>
          </st:int>
      </st:attribute>
      <st:attribute Name="BMSpecificSelColor">
          <st:role>specific color for Selected Elements of the Base Mesh</st:role>
          <st:uint size="3">
              <st:min>0</st:min>
              <st:max>255</st:max>
              <st:default size="3">
                  <st:value>255</st:value>
                  <st:value>255</st:value>
                  <st:value>255</st:value>
              </st:default>
          </st:uint>
      </st:attribute>
    </st:attributes>
</st:repository>
