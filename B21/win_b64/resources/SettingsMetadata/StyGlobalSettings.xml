<?xml version="1.0" encoding="UTF-8" ?>
<st:repository xsi:schemaLocation="urn:com:dassault_systemes:settings settings.xsd" xmlns:st="urn:com:dassault_systemes:settings" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<st:Description name="StyGlobalSettings" PrimaryTabpage="/Shape/Shape Sculptor/Parameters">
		<st:role>Settings to manage Shape Sculptor General Parameters and Options</st:role>
		<st:RepositoryFile>StyGlobalSettings</st:RepositoryFile>
		<st:version>1</st:version>
		<st:compatibility>
			<st:FullCompatibilityfromLevel>1 </st:FullCompatibilityfromLevel>
			<st:UpwardCompatibilityfromLevel>1</st:UpwardCompatibilityfromLevel>
		</st:compatibility>
	</st:Description>
	<st:attributes>
		<st:attribute Name="CustomSettings">
			<st:role>Custom settings to enable/disable the modification of parameters that control the precision of the curves</st:role>
			<st:int>
				<st:min>0</st:min>
				<st:max>1</st:max>
				<st:default>
					<st:value>0</st:value>
				</st:default>
			</st:int>
		</st:attribute>
		<st:attribute Name="Deviation">
			<st:role>Chordal deviation used to control the precision of the curves</st:role>
			<st:double>
				<st:min>0.001</st:min>
				<st:max>100000.0</st:max>
				<st:step>0.1</st:step>	
				<st:default>
					<st:value>0.001</st:value>
				</st:default>
			</st:double>
		</st:attribute>
	  <st:attribute Name="Length">
			<st:role>Segment Length used to control the precision of the curves</st:role>
			<st:double>
				<st:min>0.001</st:min>
				<st:max>100000.0</st:max>
				<st:step>0.1</st:step>					
				<st:default>
					<st:value>0.001</st:value>
				</st:default>
			</st:double>
		</st:attribute>
    <st:attribute Name="SectionMesh">
      <st:role>Option to enable/disable the section of meshes</st:role>
      <st:int>
        <st:min>0</st:min>
        <st:max>1</st:max>
        <st:default>
          <st:value>1</st:value>
        </st:default>
      </st:int>
    </st:attribute>
    <st:attribute Name="FitCurve">
      <st:role>Option to enable/disable the curve fitting</st:role>
      <st:int>
        <st:min>0</st:min>
        <st:max>1</st:max>
        <st:default>
          <st:value>1</st:value>
        </st:default>
      </st:int>
    </st:attribute>
    <st:attribute Name="ShowDegreeTools">
      <st:role>Option show/hide the degree tools</st:role>
      <st:int>
        <st:min>0</st:min>
        <st:max>1</st:max>
        <st:default>
          <st:value>1</st:value>
        </st:default>
      </st:int>
    </st:attribute>
    <st:attribute Name="ShowContinuityTools">
      <st:role>Option show/hide the continuity tools</st:role>
      <st:int>
        <st:min>0</st:min>
        <st:max>1</st:max>
        <st:default>
          <st:value>1</st:value>
        </st:default>
      </st:int>
    </st:attribute>
    <st:attribute Name="ShowDistanceTool">
      <st:role>Option show/hide the distance tools</st:role>
      <st:int>
        <st:min>0</st:min>
        <st:max>1</st:max>
        <st:default>
          <st:value>1</st:value>
        </st:default>
      </st:int>
    </st:attribute> 
	</st:attributes>
</st:repository>
