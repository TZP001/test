<?xml version="1.0" encoding="UTF-8"?>
<st:repository xsi:schemaLocation="urn:com:dassault_systemes:settings settings.xsd" xmlns:st="urn:com:dassault_systemes:settings" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="urn:com:dassault_systemes:settings">
  <st:Description name="RenderingSettingsGeneral" PrimaryTabpage="/Infrastructure/Photo Studio/General" >
    <st:role>Real Time Rendering options</st:role>
    <st:detailedRole>Full explanation of the Setting Role</st:detailedRole>
    <st:RepositoryFile>RenderingOptionsSettings</st:RepositoryFile>
    <st:version>1</st:version>
    <st:compatibility>
      <st:FullCompatibilityfromLevel>1</st:FullCompatibilityfromLevel>
      <st:UpwardCompatibilityfromLevel>1</st:UpwardCompatibilityfromLevel>
    </st:compatibility>
  </st:Description>

  <st:attributes>

    <st:attribute Name="EnvironmentSnap">
      <st:role>Enable automatic environment snap to geometry when created</st:role>
      <st:boolean StorageType="int">
        <st:default>
          <st:value>false</st:value>
        </st:default>
      </st:boolean>
    </st:attribute>

    <st:attribute Name="LightCreationMode">
      <st:role>Set direction of created lights</st:role>
      <st:int>
        <st:enum>
          <st:role>Vertical</st:role>
          <st:value>0</st:value>
          <st:role>Viewpoint</st:role>
          <st:value>1</st:value>
          <st:role>Gravitational</st:role>
          <st:value>2</st:value>
        </st:enum>
        <st:default>
          <st:value>0</st:value>
        </st:default>
      </st:int>
    </st:attribute>

    <st:attribute Name="LightCreationAxis">
      <st:role>Set gravitation direction</st:role>
      <st:int>
        <st:enum>
          <st:role>X</st:role>
          <st:value>0</st:value>
          <st:role>Y</st:role>
          <st:value>1</st:value>
          <st:role>Z</st:role>
          <st:value>2</st:value>
        </st:enum>
        <st:default>
          <st:value>2</st:value>
        </st:default>
      </st:int>
    </st:attribute>

    <st:attribute Name="ViewpointModeActivated">
      <st:role>Enable change of viewpoint type when entering workbench</st:role>
      <st:boolean StorageType="int">
        <st:default>
          <st:value>false</st:value>
        </st:default>
      </st:boolean>
    </st:attribute>

    <st:attribute Name="ViewpointMode">
      <st:role>Set viewpoint mode when entering workbench</st:role>
      <st:int>
        <st:enum>
          <st:role>Parallel</st:role>
          <st:value>0</st:value>
          <st:role>Perspective</st:role>
          <st:value>1</st:value>
          <st:role>Last Saved</st:role>
          <st:value>2</st:value>
        </st:enum>
        <st:default>
          <st:value>1</st:value>
        </st:default>
      </st:int>
    </st:attribute>

    <st:attribute Name="MaterialViewMode">
      <st:role>Force material display when entering workbench</st:role>
      <st:boolean StorageType="int">
        <st:default>
          <st:value>false</st:value>
        </st:default>
      </st:boolean>
    </st:attribute>

    <st:attribute Name="EngineInterface">
      <st:role>Set the selected rendering engine</st:role>
      <st:string Unicode="false">
        <st:default>
          <st:value>CATIRdgDefaultEngine</st:value>
        </st:default>
      </st:string>
    </st:attribute>

  </st:attributes>

  <MultiCategoriesTabpages>

    <Tabpage RootTabpage="/Infrastructure/Photo Studio/General" ReusedAs="/Infrastructure/Real Time Rendering/General" />
    
  </MultiCategoriesTabpages>
  
</st:repository>
