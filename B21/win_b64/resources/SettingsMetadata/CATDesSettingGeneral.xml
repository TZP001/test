<?xml version="1.0" encoding="UTF-8" ?>
<!-- XML File hand made and validate under Visual Dev -->
<!-- Rem1 : pour validation rajouter xmlns="urn:com:dassault_systemes:settings" car necessaire pour la validation seuleument -->
<!-- Rem2 : La validation n'accepte pas la definition du st:min sans la prÃ©sence du st:max -->
<!-- Rem3 : la definition du min et du max doit etre faite avant le default -->
<!-- Rem4 : 2 Tabpage dans un fichier XML : c'est possible mais Comment ? -->
<st:repository xsi:schemaLocation="urn:com:dassault_systemes:settings settings.xsd" xmlns:st="urn:com:dassault_systemes:settings" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <st:Description name="CATDesSettingGeneral" PrimaryTabpage="/Shape/Imagine And Shape/General">
    <st:role>Settings to manage Imagine And Shape General Options</st:role>
    <st:RepositoryFile>CATDesSetting</st:RepositoryFile>
    <st:version>1</st:version>
    <st:compatibility>
      <st:FullCompatibilityfromLevel>1 </st:FullCompatibilityfromLevel>
      <st:UpwardCompatibilityfromLevel>1</st:UpwardCompatibilityfromLevel>
    </st:compatibility>
  </st:Description>
  <st:attributes>
    <st:attribute Name="DepthUpdateChilds">
      <st:role>Depth for Update Propagation to Children</st:role>
      <st:int>
        <!-- <st:min>0</st:min> -->
        <st:default>
          <st:value>0</st:value>
        </st:default>
      </st:int>
    </st:attribute>
    <st:attribute Name="IsAttenuationOn">
      <st:role>Attenuation for mouse move</st:role>
      <st:int>
        <st:min>0</st:min>
        <st:max>1</st:max>
        <st:default>
          <st:value>0</st:value>
        </st:default>
      </st:int>
    </st:attribute>
    <st:attribute Name="Attenuation">
      <st:role>Attenuation value</st:role>
      <st:double>
        <st:min>0.0</st:min>
        <st:max>1.0</st:max>
        <st:default>
          <st:value>0.5</st:value>
        </st:default>
      </st:double>
    </st:attribute>
    <st:attribute Name="IsAutomaticWeightOn">
      <st:role>Automatic Weight On Vertices</st:role>
      <st:int>
        <st:min>0</st:min>
        <st:max>1</st:max>
        <st:default>
          <st:value>1</st:value>
        </st:default>
      </st:int>
    </st:attribute>
    <st:attribute Name="PrimitiveCreationCenterMode">
      <st:role>Primitive Creation Center Mode</st:role>
      <st:int>
        <st:min>0</st:min>
        <st:max>1</st:max>
        <st:default>
          <st:value>0</st:value>
        </st:default>
      </st:int>
    </st:attribute>
      <st:attribute Name="CommandsOptionMenuMode">
          <st:role>Command Option Menu Mode</st:role>
          <st:int>
              <st:min>0</st:min>
              <st:max>1</st:max>
              <st:default>
                  <st:value>0</st:value>
              </st:default>
          </st:int>
      </st:attribute>
      <st:attribute Name="IsQuitWithoutApplyOn">
          <st:role>Warning Dialog Box</st:role>
          <st:int>
              <st:min>0</st:min>
              <st:max>1</st:max>
              <st:default>
                  <st:value>1</st:value>
              </st:default>
          </st:int>
      </st:attribute>
      <st:attribute Name="IsRepeatLastOn">
          <st:role>Quick Switch with modification command</st:role>
          <st:int>
              <st:min>0</st:min>
              <st:max>1</st:max>
              <st:default>
                  <st:value>1</st:value>
              </st:default>
          </st:int>
      </st:attribute>
  </st:attributes>
</st:repository>
