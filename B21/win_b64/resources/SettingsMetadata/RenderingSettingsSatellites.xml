<?xml version="1.0" encoding="UTF-8"?>
<st:repository xsi:schemaLocation="urn:com:dassault_systemes:settings settings.xsd" xmlns:st="urn:com:dassault_systemes:settings" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="urn:com:dassault_systemes:settings">
  <st:Description name="RenderingSettingsSatellites" PrimaryTabpage="/Infrastructure/Photo Studio/Satellites" >
    <st:role>Photo Studio options</st:role>
    <st:detailedRole>Full explanation of the Setting Role</st:detailedRole>
    <st:RepositoryFile>RenderingOptionsSettings</st:RepositoryFile>
    <st:version>1</st:version>
    <st:compatibility>
      <st:FullCompatibilityfromLevel>1</st:FullCompatibilityfromLevel>
      <st:UpwardCompatibilityfromLevel>1</st:UpwardCompatibilityfromLevel>
    </st:compatibility>
  </st:Description>

  <st:attributes>


    <st:attribute Name="SatelliteMode">
      <st:role>Enable distributed rendering</st:role>
      <st:boolean StorageType="int">
        <st:default>
          <st:value>false</st:value>
        </st:default>
      </st:boolean>
    </st:attribute>

    <st:attribute Name="SatelliteUseLocal">
      <st:role>Use local host cpu</st:role>
      <st:boolean StorageType="int">
        <st:default>
          <st:value>true</st:value>
        </st:default>
      </st:boolean>
    </st:attribute>

    <st:attribute Name="SatelliteCount">
      <st:role>Count of satellites</st:role>
      <st:int>
        <st:default>
          <st:value>0</st:value>
        </st:default>
      </st:int>
    </st:attribute>

    <st:attribute Name="SatelliteName">
      <st:role>Name of satellite computers</st:role>
      <st:string size="1">
        <st:default size="1">
          <st:value></st:value>
        </st:default>
      </st:string>
    </st:attribute>

    <st:attribute Name="SatelliteOS">
      <st:role>OS of satellite</st:role>
      <st:string size="1">
        <st:default size="1">
          <st:value></st:value>
        </st:default>
      </st:string>
    </st:attribute>

    <st:attribute Name="SatelliteCPU">
      <st:role>CPU count of satellite computers</st:role>
      <st:string size="1">
        <st:default size="1">
          <st:value>1</st:value>
        </st:default>
      </st:string>
    </st:attribute>

    <st:attribute Name="SatelliteComment">
      <st:role>Comment on satellite computers</st:role>
      <st:string size="1">
        <st:default size="1">
          <st:value></st:value>
        </st:default>
      </st:string>
    </st:attribute>

  </st:attributes>
  
</st:repository>
