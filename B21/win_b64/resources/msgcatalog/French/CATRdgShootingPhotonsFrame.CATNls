causticFrame.IconAndOptionsFrame.OptionsFrame.causticParametersFrame.causticAccuracySpinner.LongHelp =
"Définit le nombre maximal de photons utilisés pour calculer
l'intensité locale de l'éclat des caustics.
La valeur par défaut est 100. Des valeurs plus élevées comme 200 rendent les caustics
moins bruités mais aussi plus flous et plus longs à calculer.";

causticFrame.IconAndOptionsFrame.OptionsFrame.causticParametersFrame.causticRadiusLabel.Title = "Distance maximum: ";
causticFrame.IconAndOptionsFrame.OptionsFrame.causticParametersFrame.causticRadiusSpinner.Help = "Définit la distance maximum des photons";
