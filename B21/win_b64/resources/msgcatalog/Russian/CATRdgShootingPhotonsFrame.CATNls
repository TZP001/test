//--------------------------------------
// Global frame
//--------------------------------------
globalFrame.HeaderFrame.Global.Title = "Глобальная иллюминация";

globalFrame.IconAndOptionsFrame.OptionsFrame.globalParametersFrame.globalCheck.Title = "Активный";
globalFrame.IconAndOptionsFrame.OptionsFrame.globalParametersFrame.globalCheck.Help = "Переключение глобальной иллюминации";
globalFrame.IconAndOptionsFrame.OptionsFrame.globalParametersFrame.globalCheck.ShortHelp = "Переключение глобальной иллюминации";
globalFrame.IconAndOptionsFrame.OptionsFrame.globalParametersFrame.globalCheck.LongHelp =
"Включение/выключение глобальной иллюминации.
Глобальная иллюминация представляет воспроизведение всех эффектов
внутреннего отражения в сцене (за исключением каустики).
Включает эффекты такие как просачивание цвета
между соприкасающихся стен. 
Эффекты глобальной иллюминации неуловимы, но добавляют реализм
к сцене.
Вычисление глобальной иллюминации требует сопоставление фотона
, созданного в этапе предварительной обработки, где фотоны
излучаются из источника света и прослеживаются
через сцену с помощью трассировки фотона.
В процессе раскрашивания поверхности, сопоставление фотонов используется для добавления
непрямой иллюминации.";

globalFrame.IconAndOptionsFrame.OptionsFrame.globalParametersFrame.globalAccuracyLabel.Title = "Фотоны: ";
globalFrame.IconAndOptionsFrame.OptionsFrame.globalParametersFrame.globalAccuracySpinner.Help = "Определение числа используемой глобальной иллюминации фотонов.";
globalFrame.IconAndOptionsFrame.OptionsFrame.globalParametersFrame.globalAccuracySpinner.ShortHelp = "Использованная глобальная иллюминация фотонов";
globalFrame.IconAndOptionsFrame.OptionsFrame.globalParametersFrame.globalAccuracySpinner.LongHelp =
"Определение максимального числа фотонов использованных для вычисления
локальной интенсивности глобальной иллюминации.
Значение по умолчанию равно 500. Крупное число как 2000 делает глобальную иллюминацию
сглаженнее, но медленнее.";

globalFrame.IconAndOptionsFrame.OptionsFrame.globalParametersFrame.globalRadiusLabel.Title = "Максимальный радиус: ";
globalFrame.IconAndOptionsFrame.OptionsFrame.globalParametersFrame.globalRadiusSpinner.Help = "Определение максимального радиуса фотонов";
globalFrame.IconAndOptionsFrame.OptionsFrame.globalParametersFrame.globalRadiusSpinner.ShortHelp = "Максимальный радиус фотонов";
globalFrame.IconAndOptionsFrame.OptionsFrame.globalParametersFrame.globalRadiusSpinner.LongHelp =
