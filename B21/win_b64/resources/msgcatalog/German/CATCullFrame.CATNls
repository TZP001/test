CullFrame.HeaderFrame.Global.Title = "Pixelauswahl";

CullFrame.IconAndOptionsFrame.OptionsFrame.StaticCullLabel.Title = "Statisch";
CullFrame.IconAndOptionsFrame.OptionsFrame.StaticCullLabel.ShortHelp = 
"Definiert die maximale Anzahl Pixel für die Anzeige eines Objekts.";
CullFrame.IconAndOptionsFrame.OptionsFrame.StaticCullSlider.LongHelp = 
"Verbessert oder verschlechtert die Anzeigequalität für
statische Objekte. Selbst wenn keine Geometrie bewegt werden soll,
kann es oft sinnvoll sein, nicht erforderliche Details auszublenden.
Bei einem niedrigen Wert werden alle Details angezeigt, bei einem
hohen Wert werden Details entfernt.";
CullFrame.IconAndOptionsFrame.OptionsFrame.StaticCullSlider.ShortHelp = "0 - 40";

CullFrame.IconAndOptionsFrame.OptionsFrame.DynamicCullLabel.Title = "In Bewegung";
CullFrame.IconAndOptionsFrame.OptionsFrame.DynamicCullLabel.ShortHelp = 
"Definiert die Mindestanzahl Pixel für die Anzeige beim Bewegen eines Objekts.
Hoher Wert = große Teile werden schneller bewegt.";
CullFrame.IconAndOptionsFrame.OptionsFrame.DynamicCullSlider.LongHelp = 
"Verbessert oder verschlechtert die Anzeigequalität beim Bewegen von Objekten.
Es können große Teile schneller bewegt werden, wenn für die Option 'In Bewegung'
ein hoher Wert festgelegt wird. Nach dem Loslassen der Maustaste nach dem Bewegen des Teils wird die statische Größe erneut angezeigt.";
CullFrame.IconAndOptionsFrame.OptionsFrame.DynamicCullSlider.ShortHelp = "0 - 40";
